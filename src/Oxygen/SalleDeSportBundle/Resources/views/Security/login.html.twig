{% extends "OxygenSalleDeSportBundle:Default:index.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block formulaire %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="header-text">
        <h1>Login Here</h1>
        <h2>Best Choice For your health</h2>

        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <table>
                <TR><TD><label for="username">{{ 'security.login.username'|trans }}</label></TD><TD><input type="text" id="username" name="_username" value="{{ last_username }}" required="required" style="padding-left: 5px; margin-left: 5px;"/></TD></TR>
                <TR><TD><label for="password">{{ 'security.login.password'|trans }}</label></TD><TD><input type="password" id="password" name="_password" required="required" style="padding-left: 5px; margin-left: 5px;" /></TD></TR>
            </table>
            <br>
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            <div class="banner_btn">
                <input class="banner_btn" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>
            </div>
        </form>
    </div>
{% endblock formulaire %}
